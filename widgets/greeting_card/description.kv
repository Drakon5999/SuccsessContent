<GreetingCard>:
    orientation: "vertical"
    spacing: 14
    size_hint: [0.9, 0.7]
	MDLabel:
		text: "Welcome to\n[b]}{avau![/b]"
		text_size: self.size
		font_size: 25
		markup: True
		halign: "center"
		valign: "middle"

	MDFillRoundFlatButton:
		text: "Start!"
		size_hint_x: 0.6
		size_hint_y: 0.5
		pos_hint: {"center_x": 0.5}
		on_press: root.dismiss()

	MDRoundFlatButton:
		text: "Rate us"
		size_hint_x: 0.6
		size_hint_y: 0.5
		pos_hint: {"center_x": 0.5}

	MDLabel:
		text: "[u][size=24][b]Powered by[/b][/size][/u]\nSuccessContent"
		text_size: self.size
		markup: True
		halign: "center"
		valign: "middle"
